{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "src/functions/.ts"],
  "exclude": ["./tests/", "./node_modules/", "./dist/", "*.test.ts"],
  "compileOnSave": false
}
