{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compileOnSave": false
}
